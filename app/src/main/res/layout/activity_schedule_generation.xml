<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        app:title="Generate Schedule"
        app:titleTextColor="@color/onPrimary"
        app:navigationIcon="@drawable/ic_arrow_back" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Route"
                android:layout_marginBottom="16dp"
                app:boxBackgroundColor="@color/surface">

                <Spinner
                    android:id="@+id/spinnerRoute"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:textColor="@color/onSurface" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Bus"
                android:layout_marginBottom="16dp"
                app:boxBackgroundColor="@color/surface">

                <Spinner
                    android:id="@+id/spinnerBus"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:textColor="@color/onSurface" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Date (e.g., 2024-01-15)"
                android:layout_marginBottom="16dp"
                app:boxBackgroundColor="@color/surface">

                <EditText
                    android:id="@+id/etDate"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:inputType="text"
                    android:textColor="@color/onSurface" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Time (e.g., 08:00)"
                android:layout_marginBottom="24dp"
                app:boxBackgroundColor="@color/surface">

                <EditText
                    android:id="@+id/etTime"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:inputType="text"
                    android:textColor="@color/onSurface" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGenerate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Generate Schedule"
                android:textColor="@color/onPrimary"
                app:backgroundTint="@color/primary" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
